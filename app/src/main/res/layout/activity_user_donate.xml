<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_donate">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="5dp"
        android:background="@null">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menu_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="7"
            android:fontFamily="@font/sf_pro_bold"
            android:gravity="center"
            android:text="Do the Payment"
            android:textColor="@color/grey2"
            android:textSize="25dp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="20dp">

                <EditText
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:hint="Full Name"
                    android:inputType="text"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey2"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey2"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/name_on_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:hint="Amount"
                    android:inputType="number"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey2"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:hint="Address"
                    android:inputType="text"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey2"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_pro_bold"
                    android:hint="Credit Card Number"
                    android:inputType="text"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey2"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_bold"
                        android:hint="City"
                        android:inputType="text"
                        android:textColor="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/exp_month"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_bold"
                        android:hint="Exp Month"
                        android:inputType="text"
                        android:textColor="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/project_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_bold"
                        android:hint="Project ID"
                        android:inputType="text"
                        android:textColor="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/donor_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_bold"
                        android:hint="Donor ID"
                        android:inputType="text"
                        android:textColor="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/state"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_bold"
                        android:hint="State"
                        android:inputType="text"
                        android:textColor="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/zip_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_bold"
                        android:hint="Zip Code"
                        android:inputType="text"
                        android:textColor="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/exp_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_bold"
                        android:hint="Exp Year"
                        android:inputType="text"
                        android:textColor="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/cvv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_pro_bold"
                        android:hint="CVV"
                        android:inputType="text"
                        android:textColor="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/no_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="After donating money or if you have a problem with the project ot if its credibility is compromised, you can get your money back within 48 hours."
                    android:textSize="16sp"
                    android:fontFamily="@font/sf_pro_regular"
                    android:textColor="@color/grey2"/>

                <Button
                    android:onClick="makeADonation"
                    android:id="@+id/User_Payments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/sf_pro_bold"
                    android:text="Make Donation"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>    
    

</RelativeLayout>